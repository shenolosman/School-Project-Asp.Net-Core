@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-warning" asp-action="DbReset">
   Recreate Database
</a>
<br />
<h1>Users List</h1>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isOrganizer)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => item.isOrganizer,new {disabled="true"})
                    </td>
                    <td>
                        <a asp-controller="Admin" asp-action="EditUser" type="submit" class="btn btn-danger" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            
        }
    </tbody>
</table>
