@using Microsoft.AspNetCore.Identity
@using EventiaWebapp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="d-flex navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        @*text-dark*@
        <a id="manage" class="nav-link btn btn-outline-success" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-outline-primary">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        @*text-dark  instead of btn btn-outline-success*@
        <a class="nav-link btn btn-outline-success" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-outline-success" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
