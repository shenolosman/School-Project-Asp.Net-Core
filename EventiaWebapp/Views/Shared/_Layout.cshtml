<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link href="~/StyleSheet.css" rel="stylesheet" />
    @await RenderSectionAsync("Style",false)
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Eventia</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Event" asp-action="Index">Events</a>
                        <li class="nav-item">
                        <li>
                            <a class="nav-link" asp-controller="Event" asp-action="MyEvent">My Events</a>
                        </li>
                    </ul>
                    <ul class="d-flex navbar-nav">
                        <li>
                            <a class="nav-link btn btn-outline-success" asp-controller="Home" asp-action="Index">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            &copy; Shenol -<i>Asp.Net Core </i>- 1st Project
        </div>
    </footer>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Script",false)
</body>
</html>