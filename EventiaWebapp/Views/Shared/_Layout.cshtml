<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Event" asp-action="Index">Event Bookning</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li>
                                    <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Event" asp-action="Index">Events</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Event" asp-action="MyEvent">My Events</a>
                                </li>
                    </ul>
                    <ul class="d-flex">
                        <li>
                            <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            &copy; Shenol - Asp.Net Core
        </div>
    </footer>
</div>

</body>
</html>