<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        html {
            height: 100%;
        }
        body {
            min-height: 100%;
            display: grid;
            grid-template-rows: 1fr auto;
        }
        .footer, {
            grid-row-start: 2;
            grid-row-end: 3;
            width: 100%;
        }
        .listedCard:first-child {
            width: 18rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li>
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Event" asp-action="Index">Events</a>
                        </li>
                        <li>
                            <a class="nav-link" asp-controller="Event" asp-action="MyEvent">My Events</a>
                        </li>
                    </ul>
                    <ul class="d-flex navbar-nav">
                        <li>
                            <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<main>
    <div class="container">
        @RenderBody()
    </div>
</main>
<div class="push"></div>
<footer class="footer mt-auto py-3 bg-light">
    <div class="container">
        &copy; Shenol -<i>Asp.Net Core </i>- 1st Project
    </div>
</footer>
</body>
</html>