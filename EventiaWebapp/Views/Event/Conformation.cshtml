@model Event?
@inject UserManager<User> _userManager
@{
    ViewBag.Title = "Event | Join Event";
    var attentee =await _userManager.GetUserAsync(User);
}
<div class="row">
    <div class="col">
        <div class="card listedCard">
            <h5 class="card-header">@Model.Title</h5>
            <div class="card-body">
                <h5 class="card-title">@Model.Date.ToShortDateString() (@Model.Date.ToString("HH:mm")) in @Model.Location</h5>
                <p class="card-text">@Model.Descriptiton</p>
                <a asp-controller="Event" asp-action="MyEvent" class="btn btn-primary">Go to MyEvent</a>
                <a asp-controller="Event" asp-action="Index" class="btn btn-warning">Go Back to Events</a>
            </div>
            <h5 class="card-header">@attentee.UserName Added This Event To Your List!</h5>
        </div>
    </div>
</div>

