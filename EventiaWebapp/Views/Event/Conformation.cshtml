@model int?
@{
    ViewBag.Title = "Event | Join Event";
    //Event item = _eventHandler.FindId(Model.Value);
    var id = Model.Value;
    var attente = _eventHandler.GetAttendes(id);
    var eventget = _eventHandler.GetEvents();
    var bookevent = eventget.First(a => a.Id == id);
}
<div class="row">
  @{
      <div class="col">
          <div class="card listedCard">
              <h5 class="card-header">@bookevent.Title</h5>
              <div class="card-body">
                  <h5 class="card-title">@bookevent.Date in @bookevent.Location</h5>
                  <p class="card-text">@bookevent.Descriptiton</p>
                  <a asp-controller="Event" asp-action="MyEvent"  class="btn btn-primary">Go to MyEvent</a>
                  <a asp-controller="Event" asp-action="Index"  class="btn btn-warning">Go Back to Events</a>
              </div>
              <h5 class="card-header">@attente.Name Added This Event To Your List!</h5>
          </div>
      </div>
      //_eventHandler.MyEvents.Add(item);
  }
</div>

