@model Event
@{
    ViewBag.Title = "Event | Join Event";
}
<div class="row">
    <div class="col">
        <div class="card listedCard" style="width: 400px">
            <img class="card-img-top" src="@("~/img/"+@Model.ImageName)" alt="@Model.Title" asp-append-version="true" width="200px"/>
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>
                <p class="card-text">Events date: @Model.Date.ToShortDateString() (@Model.Date.ToString("HH:mm")) in      @Model.Location</p>
                <p class="card-text">Description of event: @Model.Description</p>
                <a asp-controller="Event" asp-action="Confirmation" asp-route-Id="@Model.Id" class="btn btn-primary" type="Submit">Join This Event</a>
                <a asp-controller="Event" asp-action="Index" class="btn btn-warning">Go Back to Events</a>
            </div>
        </div>
    </div>
</div>



